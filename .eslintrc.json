{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "airbnb",
    "plugin:@typescript-eslint/recommended",
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "@typescript-eslint/no-unused-vars": "error",
    "semi": ["error", "never"],
    "max-len": [
      2,
      {
        "ignoreComments": true,
        "ignoreUrls": true,
        "code": 150 //уменьшить в дальнейшем когда разберусь с преттиером
      }
    ]
  }
} 